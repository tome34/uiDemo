<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_wx_picture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:drawableTop="@mipmap/icon_share_weixin"
            android:gravity="center"
            android:text="分享到微信"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_wx_video2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:drawableTop="@mipmap/icon_share_friend"
            android:gravity="center"
            android:text="分享到朋友圈"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_wx_video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:drawableTop="@mipmap/icon_share_qq"
            android:gravity="center"
            android:text="分享到QQ"
            android:textSize="10sp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/grey_text_refresh"/>
    <TextView
        android:id="@+id/tv_pop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/common_black_bac"
        android:textSize="14sp"/>


</LinearLayout>